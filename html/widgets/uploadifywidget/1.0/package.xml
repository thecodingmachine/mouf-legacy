	<docUrl></docUrl>
	<doc root='doc'>
		<page title="Using the Uploadify Widget" url="index.html" />
	</doc>	
	<dependencies>
		<dependency>
			<group>html/widgets</group>
			<name>BaseHtmlWidget</name>
			<version>>=1.0</version>
		</dependency>
		<dependency>
			<group>javascript/jquery</group>
			<name>jquery.uploadify</name>
			<version>2.1.0</version>
		</dependency>
		<dependency>
			<group>utils/session</group>
			<name>sessionmanager</name>
			<version>&gt;=1.0</version>
