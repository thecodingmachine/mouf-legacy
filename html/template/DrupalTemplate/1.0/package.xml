			<group>html</group>
			<name>template/BaseTemplate</name>
			<version>1.0</version>
		</dependency>
		<dependency>
			<group>utils/i18n</group>
			<name>fine</name>
			<version>1.0</version>
		</dependency>
		<dependency>
			<group>utils/cache</group>
			<name>CacheInterface</name>
			<version>1.0</version>
		</dependency>
	</dependencies>
	<requires>
		<require>drupalfunctionstubs.php</require>
		<require>DrupalTemplate.php</require>
	</requires>
</package>